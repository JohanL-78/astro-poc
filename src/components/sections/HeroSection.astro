---
import { urlForImage } from '../../sanity/lib/image';

interface Props {
  section: any;
}

const { section } = Astro.props;
const imageUrl = urlForImage(section.image)?.width(1920).height(800).url();
---

<section class="hero" style={imageUrl ? `background-image: url(${imageUrl})` : ''}>
  <div class="hero-overlay">
    <div class="hero-content">
      <h1>{section.title}</h1>
      {section.subtitle && <p class="subtitle">{section.subtitle}</p>}
      {section.cta?.text && section.cta?.url && (
        <a href={section.cta.url} class="cta-button">
          {section.cta.text}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-color: var(--color-bg-dark);
    color: var(--color-text-inverse);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: var(--color-overlay);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-content {
    text-align: center;
    padding: var(--space-xl);
    max-width: 800px;
  }

  h1 {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-md);
    line-height: var(--line-height-tight);
  }

  .subtitle {
    font-size: var(--text-xl);
    margin-bottom: var(--space-xl);
    opacity: 0.9;
  }

  .cta-button {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: var(--color-text-inverse);
    color: var(--color-text);
    text-decoration: none;
    font-weight: 600;
    border-radius: var(--radius-sm);
    transition: opacity var(--transition-base);
  }

  .cta-button:hover {
    opacity: 0.9;
  }
</style>
